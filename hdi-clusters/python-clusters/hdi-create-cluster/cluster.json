/* This file is the descriptor for the Custom python cluster hdi-create-cluster */
{
    /* Meta data for display purposes */
    "meta" : {
        "label" : "HDI cluster (create cluster)",
        "description" : "Creates and manages HDI clusters",
        "icon" : "icon-puzzle-piece"
    },
    

    "params": [
        {
            "label": "Azure Credentials",
            "type": "SEPARATOR"
        },
        {
            "name": "aad_username",
            "label": "Azure AD login",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "aad_password",
            "label": "Azure AD password",
            "type": "PASSWORD",
            "mandatory": true
        },
        {
            "name": "subscription_id",
            "label": "Subscription ID",
            "type": "STRING",
            "mandatory": true
        },
        {
            "label": "Cluster Definition",
            "type": "SEPARATOR"
        },
        {
            "name": "cluster_version",
            "label": "Cluster version",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "v36_23",
                    "label": "HDI 3.6 with Spark 2.3"
                }
            ]
        },
        {
            "name": "basename",
            "label" : "Cluster Name",
            "type": "STRING",
            "description":"Globally unique as used in url <clustername>.azurehdinsight.net",
            "mandatory" : true
        },
        {
            "name": "resource_group_name",
            "label" : "Resource Group Name",
            "type": "STRING",
            "mandatory" : true
        },
        {
            "name": "location",
            "label" : "Location",
            "type": "STRING",
            "description":"location where DSS is deployed",
            "defaultValue": "southindia",
            "mandatory" : true
        },
        {
            "name": "ssh_username",
            "label" : "SSH User",
            "type": "STRING",
            "description":"Used to access cluster nodes",
            "defaultValue": "dkuadmin",
            "mandatory" : true
        },
        {
            "name": "ssh_password",
            "label" : "SSH Password",
            "type": "PASSWORD",
            "mandatory" : true
        },
        {
            "name": "gateway_username",
            "label" : "Gateway login",
            "type": "STRING",
            "description":"Used to access Ambari, Yarn UI etc.",
            "defaultValue": "admin",
            "mandatory" : true
        },
        {
            "name": "gateway_password",
            "label" : "Gateway password",
            "type": "PASSWORD",
            "description":"Must be different from SSH password",
            "mandatory" : true
        },
        {
            "name": "headnode_size",
            "label" : "Headnode Size",
            "type": "STRING",
            "description":"Size of the 2 master nodes",
            "defaultValue": "Standard_D12_V2",
            "mandatory" : true
        },
        {
            "name": "worker_size",
            "label" : "Worker Size",
            "type": "STRING",
            "defaultValue": "Standard_D3_V2",
            "mandatory" : true
        },
        {
            "name": "worker_count",
            "label" : "Number of workers",
            "type": "INT",
            "defaultValue": 1,
            "mandatory" : true
        },
        {
            "label": "Storage",
            "type": "SEPARATOR"
        },
        {
            "name": "storage_account",
            "label": "Storage account",
            "description": "WASB storage account to be used as default FS",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "storage_account_key",
            "label": "Key",
            "description": "WASB storage account Key",
            "type": "PASSWORD",
            "mandatory": true
        },
        {
            "name": "storage_account_container",
            "label": "Container",
            "description": "WASB container",
            "type": "STRING",
            "mandatory": true
        },
        {
            "label": "Networking",
            "type": "SEPARATOR"
        },
        {
            "name": "vnet_name",
            "label": "VNET name",
            "description": "DSS VM VNET",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "subnet_name",
            "label": "Subnet",
            "description": "DSS VM subnet",
            "type": "STRING",
            "defaultValue": "default",
            "mandatory": true
        }
    ]
}
